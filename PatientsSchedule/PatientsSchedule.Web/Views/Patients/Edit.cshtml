@model PatientsSchedule.Web.Models.Patient

@{
    ViewData["Title"] = "Modificare pacient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="bg-custom-dark">
            <h1>Modificare pacient</h1>
            <div>
                <span class="text-danger">@ViewBag.ErrorMessage</span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LastName" class="control-label item-no-padding-margin"></label>
                <input asp-for="LastName" class="form-control rounded-0 item-no-padding-margin" />
                <span asp-validation-for="LastName" class="text-danger item-no-padding-margin"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label item-no-padding-margin"></label>
                <input asp-for="FirstName" class="form-control rounded-0 item-no-padding-margin" />
                <span asp-validation-for="FirstName" class="text-danger item-no-padding-margin"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label item-no-padding-margin"></label>
                <input asp-for="Address" class="form-control rounded-0 item-no-padding-margin" />
                <span asp-validation-for="Address" class="text-danger item-no-padding-margin"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label item-no-padding-margin"></label>
                <input asp-for="PhoneNumber" class="form-control rounded-0 item-no-padding-margin" />
                <span asp-validation-for="PhoneNumber" class="text-danger item-no-padding-margin"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label item-no-padding-margin"></label>
                <input asp-for="Email" class="form-control rounded-0 item-no-padding-margin" />
                <span asp-validation-for="Email" class="text-danger item-no-padding-margin"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-success rounded-0 minimal-margins"/>
                <a asp-action="Index" class="btn btn-danger rounded-0 minimal-margins">Anulare</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
