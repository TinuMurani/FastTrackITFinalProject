@model IEnumerable<PatientsSchedule.Web.Models.PatientModel>

@{
    ViewData["Title"] = "Patients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Pacienti</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Adauga pacient</a>
</p>
<div>
    <span class="text-danger">@ViewBag.ErrorMessage</span>
</div>
<table class="table table-borderless table-striped bg-custom-beige custom-margin-padding">
    <thead class="bg-custom-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="h-50">
        @foreach (var item in Model)
        {
            <tr class="font-custom-small">
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">Modificare</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalii</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Stergere</a>
                </td>
            </tr>
        }
    </tbody>
</table>
