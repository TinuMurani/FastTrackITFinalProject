@model PatientsSchedule.Web.Models.AppointmentModel

@{
    ViewData["Title"] = "Delete Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-custom-blue">
    <h2 class="text-danger">Are you sure you want to delete this?</h2>
    <div>
        <span class="text-danger">@ViewBag.ErrorMessage</span>
    </div>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AppointmentDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDuration)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger minimal-margins" />
        <a asp-action="Index" class="btn btn-success">Cancel</a>

        <span class="text-danger">@ViewBag.ErrorMessage</span>
    </form>
</div>
