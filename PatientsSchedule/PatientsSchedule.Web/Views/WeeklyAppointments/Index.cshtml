@using PatientsSchedule.Web.Internal

@model PatientsSchedule.Web.Models.WeeklyAppointments

@{
    ViewData["Title"] = "Programari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <span class="text-danger">@ViewBag.ErrorMessage</span>
</div>

<div>
    <a asp-action="Create" class="btn rounded-0 btn-custom-dark">Programare noua</a>
    <form class="week-navigation navigation-buttons float-right" asp-action="Index">
        <input type="submit" value="< Saptamana precedenta" name="navigate" class="btn btn-dark rounded-0" />
        <input type="submit" value="Saptamana urmatoare >" name="navigate" class="btn btn-dark rounded-0" />
