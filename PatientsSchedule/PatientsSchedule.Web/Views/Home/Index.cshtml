@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center w-75 mx-auto">
    <h1 class="display-4 font-custom-main">Va asteptam in cabinetul nostru</h1>
    <p class="font-custom-main">Avem grija de problemele tale ca sa te poti bucura de viata</p>
</div>

<div id="imageCarousel" class="carousel slide w-50 h-50 mx-auto" data-ride="carousel">
    <ol class="carousel-indicators d-none">
        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#imageCarousel" data-slide-to="1"></li>
        <li data-target="#imageCarousel" data-slide-to="2"></li>
        <li data-target="#imageCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/carousel.png" alt="First slide">
            <div class="carousel-caption d-none d-md-block font-custom-carousel carousel-caption-custom">
                <h3>Va asteptam<br />la vizitele regulate</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/carousel.png" alt="Second slide">
            <div class="carousel-caption d-none d-md-block font-custom-carousel carousel-caption-custom">
                <h3>Vom avea grija<br />de zambetul tau</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/carousel.png" alt="Third slide">
            <div class="carousel-caption d-none d-md-block font-custom-carousel carousel-caption-custom">
                <h3>Lasati-va problemele<br />in mainile profesionistilor nostri</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/carousel.png" alt="Fourth slide">
            <div class="carousel-caption d-none d-md-block font-custom-carousel carousel-caption-custom">
                <h3>Specialistii nostri<br />vor avea grija<br />de nevoile dumneavoastra</h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
